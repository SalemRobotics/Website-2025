{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "module": "nodenext",
    "target": "es6",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "esModuleInterop": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "buildOptions": {
    "incremental": true
  }
}
